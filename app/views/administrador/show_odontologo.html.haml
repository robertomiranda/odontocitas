.wrapper_perfil_v_odonto{ style:"background:white;" }
	%br
	.imagen_odonto_admin
		= image_tag  @odontologo.image_url, width:"190" ,height:"220"
	.informacion_o_admin
		%p{class:"info_admin"}
			%em{class:"bold"}
				= "Nombre :"
			= "#{@odontologo.nombre} #{@odontologo.apellido}" 
		%p{class:"info_admin"}
			%em{class:"bold"}
				= "Correo" 
			= "#{@odontologo.correo}"
		%p{class:"info_admin"}
			%em{class:"bold"}
				= "Celular" 
			= "#{@odontologo.celular}"
		%p{class:"info_admin"}
			%em{class:"bold"}
				= "Usuario" 
			= "#{@odontologo.usuario}"
		%p{class:"info_admin"}
			%em{class:"bold"}
				= "Fecha de nacimiento" 
			= "#{@odontologo.fecha_nacimiento}"
		%p{class:"info_admin"}
			- if @odontologo.autorizado == "si"
				%em{class:"bold"}
					= "Autorizado"
			- else
				%em{class:"bold"}
					= "No esta Autorizado"
	
	
	.informacion_o_admin
		%p{class:"info_admin"}
			%em{class:"bold"}
				= "Total Citas" 
			="#{@odontologo.appointments.length}"
		%p{class:"info_admin"}
			%em{class:"bold"}
				= "Citas Online" 
			="#{@online}"
		%p{class:"info_admin"}
			%em{class:"bold"}
				= "Citas Offline" 
			="#{@offline}"
		%p{class:"info_admin"}
			%em{class:"bold"}
				= "Citas que el paciento no asistio" 
			="#{@noasistio}"
		%p{class:"info_admin"}
			%em{class:"bold"}
				= "Citas que el paciente asistio" 
			= "#{@asistio}"
		%p{class:"info_admin"}
			%em{class:"bold"}
				= "Citas confirmadas" 	
			= "#{@confirmada}"
		%p{class:"info_admin"}
			%em{class:"bold"}
				= "Citas por confirmar"  
			= "#{@porconfirmar}"
		%p{class:"info_admin"}
			%em{class:"bold"}
				= "Citas reagendadas" 
			= "#{@reagandada}"
		%p{class:"info_admin"}
			%em{class:"bold"}
				= "Citas canceladas" 
			= "#{@cancelada}"
		%p{class:"info_admin"}
			%em{class:"bold"}
				= "Total Pacientes" 
			= "#{@pacientes.length}"
		
	
	.clearfix
	%h1{ style:"text-align:center;" }
		Citas

	%table{style: "margin:auto;", class: "tabla_estilos_datos"}
		%tr
			%th
				= "Id"
			%th
				= "Paciente"
			%th
				= "Estado"
			%th
				= "Dia"
			%th
				= "Mes"
			%th
				= "AÃ±o"
			%th
				= "Hora"

		- @odontologo.appointments.each do |cita|
		
			%tr
				%th
					= "#{cita.id}"
				%th
					= "#{cita.paciente.nombre} #{cita.paciente.apellido}"
				%th
					= "#{cita.estado}"
				%th
					= "#{cita.dia}"
				%th
					= "#{cita.mes}"
				%th
					= "#{cita.ano}"
				%th
					= "#{cita.hora_arreglada}"
			
	%br
	%br

	%h1{ style:"text-align:center;" }
		= "Pacientes"
	
	%table{style: "margin:auto;", class: "tabla_estilos_datos"}
		%tr 
			%th 
				= "Nombre"
			%th 
				= "Correo"

		- @pacientes.each do |paciente|
			%tr
				%th 
					%a{:href => "/administrador/pacientes/#{paciente.paciente.id}"}
						= "#{paciente.paciente.nombre} #{paciente.paciente.apellido}"
				%th 

					= "#{paciente.paciente.correo}"

	%br
	%br
	